            @Html.DisplayFor(modelItem => item.CheckTotal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TaxPercentage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CheckTaxTotal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TipPercentage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CheckTipTotal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CheckGrandTotal)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CheckID }) |
            @Html.ActionLink("Details", "Details", new { id=item.CheckID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CheckID })
