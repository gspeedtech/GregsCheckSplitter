@model IEnumerable<GregsCheckSplitter4.Models.Check>

@{
    ViewBag.Title = "Index";
}

<h2>Checks</h2>

<p>
    @Html.ActionLink("Parties", "Index", "Parties")
    @Html.ActionLink("Diners", "Index", "Diners")
    @*@Html.ActionLink("Create New", "Create")*@
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CheckName)
        </th>
