            @Html.DisplayNameFor(model => model.CheckTotal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TaxPercentage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CheckTaxTotal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipPercentage)
        </th>
